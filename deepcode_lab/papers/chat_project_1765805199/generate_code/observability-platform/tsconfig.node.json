{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node", "vite/client"]
  },
  "include": [
    "vite.config.ts",
    ".eslintrc.cjs",
    "*.config.ts",
    "*.config.js"
  ]
}
